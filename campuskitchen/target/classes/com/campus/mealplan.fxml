<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="483.0" prefWidth="346.0" spacing="20" styleClass="root" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.MealPlansController">

    <children>
        <Label styleClass="title-label" text="Meal Plans" />

        <ScrollPane fitToWidth="true" prefHeight="400">
            <content>
                <VBox spacing="10" styleClass="highlight-box">
                    <Label styleClass="section-label" text="Fresh Fuel: 7-Day Balanced Bites" />
                    <Label fx:id="lblPlanText" wrapText="true" />
                </VBox>
            </content>
        </ScrollPane>

        <HBox alignment="CENTER" spacing="20">
            <Button onAction="#handleCreateMealPlan" styleClass="button-primary" text="Create" />
            <Button onAction="#handleGenerateList" styleClass="button-primary" text="Generate GroceryList" />
        </HBox>
    </children>

    <stylesheets>
        <URL value="@../css/styles.css" />
    </stylesheets>
</VBox>
