<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="483.0" prefWidth="346.0" spacing="20" styleClass="root" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.MealPlansController">

    <children>
        <Label fx:id="lblMealPlans" styleClass="title-label" text="Meal Plans" />

        <ScrollPane fitToWidth="true" prefHeight="273.0" prefWidth="289.0">
            <content>
                <VBox spacing="10" styleClass="highlight-box" />
            </content>
        </ScrollPane>

        <HBox alignment="CENTER" spacing="20">
            <Button fx:id="btnCreateMealPlan" onAction="#handleCreateMealPlan" styleClass="button-primary" text="Create" />
            <Button fx:id="btnGroceryList" onAction="#handleGenerateList" styleClass="button-primary" text="Generate GroceryList" />
        </HBox>
      <HBox prefHeight="62.0" prefWidth="346.0">
         <children>
            <Button fx:id="btnRecipe" mnemonicParsing="false" prefHeight="25.0" prefWidth="72.0" text="Recipe " />
            <Button fx:id="btnMealPlans" mnemonicParsing="false" prefHeight="26.0" prefWidth="81.0" text="MealPlans" />
            <Button fx:id="btnBrowse" mnemonicParsing="false" text="Browse" />
            <Button fx:id="btnHome" mnemonicParsing="false" text="Home" />
         </children>
      </HBox>
    </children>

    <stylesheets>
        <URL value="@css/styles.css" />
    </stylesheets>
</VBox>
